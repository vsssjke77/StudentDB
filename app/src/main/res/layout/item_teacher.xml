<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Информация о преподавателе -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя Фамилия"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewTeacherEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textViewTeacherLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин: teacher_login"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- Кнопки "Изменить" и "Удалить" -->
    <Button
        android:id="@+id/buttonEditTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Изменить"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/buttonDeleteTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>