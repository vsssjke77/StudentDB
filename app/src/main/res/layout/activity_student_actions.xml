<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для ввода фамилии -->
    <EditText
        android:id="@+id/editTextSurnameFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Фамилия"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Поле для ввода группы -->
    <EditText
        android:id="@+id/editTextGroupFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Группа"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Кнопка для добавления студента -->
    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить студента"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView для отображения списка студентов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>